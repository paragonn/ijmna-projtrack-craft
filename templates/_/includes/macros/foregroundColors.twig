{% set changeColorCon = changeDefaultColor ? changeDefaultColor and opacity < 55 and opacity != 'none' : false %}

{% if overrideColor|length %}
    {% set foregroundColors = {
        'borderColor' : {
            'white'     : 'border-white',
            'blue'      : 'border-blue-500',
            'blue-600'  : 'border-blue-600',
            'blue-800'  : 'border-blue-800',
        },
    } %}
    {% if type is iterable %}
        {% for item in type %}
            {{ foregroundColors[item][overrideColor] ?? null }}
        {% endfor %}
    {% else %}
        {{ foregroundColors[type][overrideColor] ?? null }}
    {% endif %}
{% else %}
    {% set foregroundColors = {
        'heading' : {
            'none'       : 'text-blue-800',
            'white'      : 'text-blue-800',
            'blue-100'   : 'text-blue-800',
            'blue'       : changeColorCon ? 'text-blue-800' : 'text-white',
            'blue-600'   : changeColorCon ? 'text-blue-800' : 'text-white',
            'blue-700'   : changeColorCon ? 'text-blue-800' : 'text-white',
            'blue-800'   : 'text-white'
        },

        'eyebrow' : {
            'none'       : 'text-blue-500',
            'white'      : 'text-blue-500',
            'blue-100'   : 'text-blue-500',
            'blue'       : changeColorCon ? 'text-blue-500' : 'text-white',
            'blue-600'   : changeColorCon ? 'text-blue-500' : 'text-white',
            'blue-700'   : 'text-blue-500',
            'blue-800'   : 'text-blue-500'
        },

        'quote-border' : {
            'none'      : 'border-blue-50/20 !border-l-blue-500',
            'white'     : 'border-blue-50/20 !border-l-blue-500',
            'blue-100'  : 'border-blue-50/20 !border-l-blue-500',
            'blue'      : changeColorCon ? 'border-blue-50/20 !border-l-blue-500' : 'border-gray-100 !border-l-white',
            'blue-600'  : changeColorCon ? 'border-blue-50/20 !border-l-blue-500' : 'border-gray-100 !border-l-white',
            'blue-700'  : 'border-blue-50/20 !border-l-blue-500',
            'blue-800'  : 'border-blue-50/20 !border-l-blue-500'
        },

        'borderColor' : {
            'none'      : 'border-blue-600',
            'white'     : 'border-blue-600',
            'blue-100'  : 'border-blue-600',
            'blue'      : 'border-white',
            'blue-600'  : 'border-white',
            'blue-700'  : 'border-white',
            'blue-800'  : 'border-white'
        },
    } %}
    {% if type is iterable %}
        {% for item in type %}
            {{ foregroundColors[item][background] ?? null }}
        {% endfor %}
    {% else %}
        {{ foregroundColors[type][background] ?? null }}
    {% endif %}
{% endif %}