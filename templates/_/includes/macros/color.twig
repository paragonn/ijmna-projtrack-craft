{% set colors = {
    'background' : {
        'none'       : '',
        'white'      : 'bg-white',
        'light-blue' : 'bg-blue-light',
        'blue-100'   : 'bg-blue-100',
        'blue'       : 'bg-blue-500',
        'blue-600'   : 'bg-blue-600',
        'blue-700'   : 'bg-blue-700',
        'blue-800'   : 'bg-blue-800'
    },
    'gradient' : {
        'none'       : 'from-white',
        'white'      : 'from-white',
        'light-blue' : 'from-blue-light',
        'blue-100'   : 'from-blue-100',
        'blue'       : 'from-blue-500',
        'blue-600'   : 'from-blue-600',
        'blue-700'   : 'from-blue-700',
        'blue-800'   : 'from-blue-800'
    },
    'linearGradient' : {
        'light-blue'  : 'bg-[linear-gradient(to_bottom,white_130px,theme(colors.blue.light)_130px)] md:bg-[linear-gradient(to_bottom,white_250px,theme(colors.blue.light)_250px)]',
        'blue-100'    : 'bg-[linear-gradient(to_bottom,white_130px,theme(colors.blue.100)_130px)] md:bg-[linear-gradient(to_bottom,white_250px,theme(colors.blue.100)_250px)]',
        'blue-100/2'  : 'bg-[linear-gradient(to_bottom,white_130px,theme(colors.blue.100/0.1)_130px)] md:bg-[linear-gradient(to_bottom,white_250px,theme(colors.blue.100/0.1)_250px)]'
    },
    'box-color' : {
        'none'        : 'bg-white',
        'white'       : 'bg-white',
        'transparent' : 'bg-transparent'
    }
} %}
{% if handle|length %}
    {{ colors[swatch][handle] }}
{% endif %}