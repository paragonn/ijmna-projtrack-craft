                                    <circle cx="17.28" cy="11.92" r=".648" fill="#fff" stroke="#fff" stroke-width="1.5" />
                                    <circle cx="17.28" cy="22.093" r=".648" fill="#fff" stroke="#fff" stroke-width="1.5" />
                                </svg>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex-1 w-full" :class="{'' : hamburger , 'flex-auto' : !hamburger}">
            <img src="/assets/images/map.png" class="object-cover w-full h-full" alt="">
        </div>
    </div>
</section>

{% endblock %}