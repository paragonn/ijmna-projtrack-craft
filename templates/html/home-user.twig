{% block content %}

<section class="mt-[79px]">
    <div class="h-[calc(100vh-79px)] flex items-stretch" x-data="{hamburger: false }">
        <div class="flex-1 w-full h-full">
            <div class="flex w-full h-full">
                <div class="flex-1 w-full" x-show="hamburger" @click.outside="hamburger = false" x-transition:enter="transition-transform ease-in-out duration-300" x-transition:enter="transform transition ease-in-out duration-300" x-transition:enter-start="-translate-x-full opacity-0" x-transition:enter-end="translate-x-0 opacity-100" x-transition:leave="transform transition ease-in-out duration-300" x-transition:leave-start="translate-x-0 opacity-100" x-transition:leave-end="-translate-x-full opacity-0">
