{% extends "html/_includes/layout" %}

{% block seo %}
<title>Page Link</title>
{% endblock %}

{% block content %}

<section class="mt-[79px]">
    <div class="h-[calc(100vh-79px)] w-full flex items-stretch" x-data="{ open: false }">
        <div x-data="{ open: false }" class="flex w-full max-w-4xl overflow-hidden">
            <!-- First Div (Content) -->
            <div :class="open ? '-translate-x-full' : 'translate-x-0'" class="transform transition-transform duration-500 flex-1 bg-white p-6">
                <h1 class="text-2xl font-bold">Content Area</h1>
                <p>This is the main content area.</p>
            </div>

            <!-- Second Div (Menu Icon) -->
            <div @click="open = !open" class="flex items-center justify-center w-12 h-12 bg-gray-800 text-white cursor-pointer transition-transform duration-500" :class="open ? '-translate-x-full' : 'translate-x-0'">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </div>

            <!-- Third Div (Images) -->
            <div :class="open ? '-translate-x-full w-screen' : 'translate-x-0'" class="transform transition-transform duration-500 flex-1 bg-white p-6">
                <h1 class="text-2xl font-bold">Images Area</h1>
                <div class="grid grid-cols-3 gap-4">
                    <img src="https://via.placeholder.com/150" alt="Placeholder Image">
                    <img src="https://via.placeholder.com/150" alt="Placeholder Image">
                    <img src="https://via.placeholder.com/150" alt="Placeholder Image">
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}